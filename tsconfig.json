{
  "rootDir": "./",
  "outDir": "build",
  "compilerOptions": {
    "rootDir": "./",
    "target": "ESNEXT",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@sound/*": [
        "./build/emulator/*"
      ],
      "@Z64Online/*": [
        "./src/Z64Online/*"
      ]
    },
    "noImplicitAny": false
  },
  "include": [
    "src/**/*.ts",
    "cores/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "build",
  ]
}